<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="350.0" spacing="30.0"
      style="-fx-background-color: white;"
      stylesheets="@style-sheets/alarmAddPopup.css, @style-sheets/font.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nutrient_reminder.controller.AlarmAddPopupController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <HBox alignment="CENTER" spacing="10.0">
        <Label fx:id="ampmLabel" onMouseClicked="#toggleAmPm" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #555555; -fx-cursor: hand;" text="오후" />

        <TextField fx:id="hourField" alignment="CENTER" prefWidth="90.0" prefHeight="70" promptText="10"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-background-color: transparent; -fx-border-color: #BDBDBD; -fx-border-width: 0 0 2 0; -fx-text-fill: #333333;" />

        <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333333;" text=":" />

        <TextField fx:id="minuteField" alignment="CENTER" prefWidth="90.0" prefHeight="70" promptText="54"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-background-color: transparent; -fx-border-color: #BDBDBD; -fx-border-width: 0 0 2 0; -fx-text-fill: #333333;" />
    </HBox>

    <TextField fx:id="nameField" promptText="영양제 이름"
               style="-fx-background-color: white; -fx-border-color: #BDBDBD; -fx-border-radius: 20; -fx-background-radius: 20; -fx-font-size: 16px; -fx-pref-height: 40; -fx-padding: 0 15; -fx-text-fill: #333333;" />

    <HBox alignment="CENTER_LEFT" prefWidth="250.0">
        <Label text="매주 반복" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555555;" />
    </HBox>

    <HBox alignment="CENTER" spacing="5.0">
        <ToggleButton fx:id="sunToggle" text="일" styleClass="day-btn" />
        <ToggleButton fx:id="monToggle" text="월" styleClass="day-btn" />
        <ToggleButton fx:id="tueToggle" text="화" styleClass="day-btn" />
        <ToggleButton fx:id="wedToggle" text="수" styleClass="day-btn" />
        <ToggleButton fx:id="thuToggle" text="목" styleClass="day-btn" />
        <ToggleButton fx:id="friToggle" text="금" styleClass="day-btn" />
        <ToggleButton fx:id="satToggle" text="토" styleClass="day-btn" />
    </HBox>

    <Button fx:id="saveButton" onAction="#handleSave" prefHeight="50.0" prefWidth="250.0"
            style="-fx-background-color: #D0E8F2; -fx-text-fill: #567889; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="저장" />
</VBox>