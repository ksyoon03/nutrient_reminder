<?xml version="1.0" encoding="UTF-8"?>

<!--JavaFX UI 요소 불러오기-->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Hyperlink?>


<!--UI 요소 세로 정렬-->
<VBox alignment="CENTER"
      spacing="20.0"
      xmlns="http://javafx.com/javafx/17.0.6"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.nutrient_reminder.controller.LoginController"

      prefWidth="400" prefHeight="300">
    <!--alignment="CENTER" : Vbox 안의 내용 가운데 정렬-->
    <!--spacing="20.0" : 각 요소들 사이 간격 20px로 설정-->
    <!--xmlns="http://javafx.com/javafx/17.0.6" : 디폴트 namespace 선언-->
    <!--xmlns:fx="http://javafx.com/fxml/1" : "fx:"라는 접두사를 가진 namespace 선언-->
    <!--fx:controller="com.nutrient_reminder.controller.LoginController" : 현재 FXML 파일과 상호작용할 컨트롤러 클래스 지정-->
    <!--prefHeight="300" prefWidth="400" : UI 요소의 가로, 세로 권장 크기 지정-->

    <!--UI 요소의 내부 여백 설정-->
    <padding>
        <!--UI 요소 안쪽으로 들여쓰기-->
        <Insets  top="20.0" bottom="20.0" left="20.0" right="20.0"/>
        <!--상하좌우 테두리에서 20px씩 공간을 둠-->
    </padding>

    <!--화면에 로그인 텍스트를 표시하는 라벨-->
    <Label text="영양제 알리미 로그인">
        <!--폰트 설정-->
        <font>
            <Font name="Malgun Gothic Bold"
                  size="24.0" />
                <!--name : 기본 글꼴 굵게-->
                <!--size : 글꼴 크기 24px-->
        </font>
    </Label>

    <!--사용자가 아이디를 입력하는 텍스트 입력창-->
    <TextField fx:id="idField"
               promptText="아이디"
               maxWidth="200"/>
                <!--fx:id="idField" : 컨트롤러 클래스에서 이 <TextField>를 참조할 때 사용할 고유 ID-->
                <!--promptText="아이디" : 입력창에 기본적으로 들어갈 안내 문구-->
                <!--maxWidth="200" : 해당 요소의 최대 크기를 200px로 설정-->

    <!--사용자가 비밀번호를 입력하는 텍스트 입력창-->
    <!--비밀번호는 *로 표시됨-->
    <PasswordField fx:id="passwordField"
                   promptText="비밀번호"
                   maxWidth="200"/>
                    <!--fx:id="passwordField : 컨트롤러 클래스에서 이 <PasswordField>를 참조할 때 사용할 고유 ID-->
                    <!--promptText="비밀번호" : 입력창에 기본적으로 들어갈 안내 문구-->
                    <!--maxWidth="200" : 해당 요소의 최대 크기를 200px로 설정-->

    <!--로그인 버튼-->
    <Button fx:id="loginButton"
            text="로그인"
            onAction="#loginButtonAction"
            prefWidth="200"/>
            <!--fx:id="loginButtonAction" : 컨트롤러 클래스에서 이 <Button>을 참조할 때 사용할 고유 ID-->
            <!--text="로그인" : 버튼에 들어갈 텍스트-->
            <!--onAction="#LoginButton" : 이 버튼을 눌렀을 때, 컨트롤러 클래스에 있는 LoginButton 메소드를 실행-->
            <!--maxWidth="200" : 해당 요소의 최대 크기를 200px로 설정-->

    <!-- ++ 회원가입 하이퍼 링크 삽입 -->
    <HBox alignment="CENTER" spacing="6">
        <!--HBox(수평으로 ui 배치) / alignment="CENTER" (가운대 정렬) / spacing="6" ( 각 요소 사이 6px로 설정 ) -->
        <Label text="회원이 아니신가요?" />
        <Hyperlink text="회원가입" onAction="#goToSignup"/>
        <!--Hyperlink(클릭 가능한 링크) / onAction="#goToSignup"(클릭 시 회원가입 화면으로 이동)-->
    </HBox>
</VBox>
