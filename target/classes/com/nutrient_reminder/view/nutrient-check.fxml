<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.nutrient_reminder.controller.NutrientCheckController"
            stylesheets="@style-sheets/recommendButton.css, @style-sheets/font.css">

    <VBox layoutX="0.0" layoutY="0.0" prefWidth="800.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <HBox alignment="CENTER_RIGHT" prefHeight="40.0" spacing="10.0">
            <padding>
                <Insets right="20.0" top="10.0" />
            </padding>
            <Label fx:id="userLabel" text="'아이디' 님" textFill="#555555">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#onLogoutClick"
                    style="-fx-background-color: transparent; -fx-cursor: hand;"
                    text="로그아웃" textFill="#555555">
                <font>
                    <Font size="12.0" />
                </font>
            </Button>
        </HBox>

        <HBox alignment="CENTER" prefHeight="60.0">
            <Label text="알리미" textFill="#567889">
                <font>
                    <Font name="System Bold" size="36.0" />
                </font>
            </Label>
        </HBox>

        <HBox alignment="CENTER" prefHeight="50.0" spacing="150.0">
            <Button fx:id="mainTabButton" mnemonicParsing="false" onAction="#handleMainTab"
                    style="-fx-background-color: transparent; -fx-font-weight: bold; -fx-cursor: hand;"
                    text="메인" textFill="#999999">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>

            <Button fx:id="recommendTabButton" mnemonicParsing="false"
                    style="-fx-background-color: transparent; -fx-font-weight: bold; -fx-cursor: hand;"
                    text="영양제 추천" textFill="#555555">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>

        </HBox>

        <Separator prefHeight="3.0" prefWidth="556.0" />
    </VBox>

    <VBox spacing="20" AnchorPane.topAnchor="160.0" AnchorPane.bottomAnchor="80.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <padding>
            <Insets top="20" right="40" bottom="20" left="40"/>
        </padding>

        <Label text="자가 진단 체크리스트" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #567889;"/>

        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                    style="-fx-background: #F7F8FA; -fx-background-color: #F7F8FA;
                    -fx-border-color: #E0E0E0; -fx-border-radius: 10; -fx-background-radius: 10;">
            <content>
                <GridPane fx:id="checkboxGrid" hgap="20" vgap="20"
                          style="-fx-background-color: #F7F8FA;">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                </GridPane>
            </content>
        </ScrollPane>
    </VBox>

    <Button text="영양제 추천 받기" onAction="#onRecommendClick"
            styleClass="recommend-btn"
            AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0"/>

</AnchorPane>